<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.juliodev.taxihaiti.AddTaxi"
    tools:showIn="@layout/activity_add_taxi">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/ivProfil"
        android:background="#fff"
        android:src="@drawable/carlogo"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="40dp"
        android:onClick="takePhoto"
        android:layout_height="40dp"
        android:id="@+id/ivTakePhoto"
        android:src="@drawable/camera"
        android:layout_above="@+id/tvName"
        android:layout_toRightOf="@+id/ivProfil"
        android:layout_toEndOf="@+id/ivProfil" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_action_userform"
        android:ems="10"
        android:id="@+id/tvName"
        android:layout_below="@+id/ivProfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Votre nom complet"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Telephone"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:id="@+id/tvPhone"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvName"
        android:layout_alignEnd="@+id/tvName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Adresse"
        android:drawableLeft="@drawable/ic_action_location"
        android:ems="10"
        android:id="@+id/tvAdresse"
        android:layout_below="@+id/tvPlaque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvPlaque"
        android:layout_alignEnd="@+id/tvPlaque" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Plaque vehicule"
        android:drawableLeft="@drawable/ic_action_plaque"
        android:ems="10"
        android:id="@+id/tvPlaque"
        android:layout_below="@+id/tvPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvPhone"
        android:layout_alignEnd="@+id/tvPhone" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Type de vehicule"
        android:drawableLeft="@drawable/ic_action_plaque"
        android:ems="10"
        android:id="@+id/typevehicule"
        android:layout_below="@+id/tvAdresse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
