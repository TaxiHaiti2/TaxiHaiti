<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/ivImageUser"
        android:background="#fff"
        android:src="@drawable/usera"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Julio"
        android:textColor="#000"
        android:textStyle="normal"
        android:id="@+id/tvName"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@string/abc_font_family_display_4_material"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivImageUser"
        android:layout_toEndOf="@+id/ivImageUser"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Delmas 33"
        android:id="@+id/tvAdresse"
        android:fontFamily="@string/abc_font_family_display_4_material"
        android:ellipsize="end"
        android:minLines="1"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivImageUser"
        android:layout_toEndOf="@+id/ivImageUser" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivDetails"
        android:src="@drawable/contactcard"
        android:layout_alignBottom="@+id/tvAdresse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvName"
        android:alpha="0" />
</RelativeLayout>