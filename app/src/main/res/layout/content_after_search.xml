<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.juliodev.taxihaiti.faceData.AfterSearch"
    tools:showIn="@layout/activity_after_search">
    <Button android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:alpha="0"
        android:id="@+id/goToFakeDetails"
        />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="6dp"
        android:id="@+id/ivImageUser"
        android:src="@drawable/ic_action_userform"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="Isaac Samuel"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/facTvName"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@string/abc_font_family_display_4_material"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivImageUser"
        android:layout_toEndOf="@+id/ivImageUser"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Delmas 33"
        android:id="@+id/tvAdresse"
        android:fontFamily="@string/abc_font_family_display_4_material"
        android:ellipsize="end"
        android:minLines="1"
        android:layout_below="@+id/facTvName"
        android:layout_alignLeft="@+id/facTvName"
        android:layout_alignStart="@+id/facTvName"
        android:layout_marginTop="-5dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:id="@+id/ivDetails"
        android:src="@drawable/menub"
        android:alpha="0.5"
        android:layout_alignBottom="@+id/tvAdresse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
