<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.juliodev.taxihaiti.ListeTaxi"
    tools:showIn="@layout/activity_liste_taxi">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ivImage1"
        android:background="#fff"
        android:src="@drawable/usera"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Julio"
        android:textStyle="bold"
        android:id="@+id/tvName"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/ivImage1"
        android:layout_toRightOf="@+id/ivImage1"
        android:layout_toEndOf="@+id/ivImage1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Delmas 33"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivImage1"
        android:layout_toEndOf="@+id/ivImage1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivDetails"
        android:src="@drawable/contactcard"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvName" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView2"
        android:background="#fff"
        android:src="@drawable/scooter"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/ivImage1"
        android:layout_alignLeft="@+id/ivImage1"
        android:layout_alignStart="@+id/ivImage1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Keitel"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/ivImage1"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PV rue Gregroire"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/contactcard"
        android:layout_marginTop="16dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/ivDetails"
        android:layout_alignStart="@+id/ivDetails" />
</RelativeLayout>
